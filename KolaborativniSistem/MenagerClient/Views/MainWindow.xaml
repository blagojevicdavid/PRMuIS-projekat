<Window x:Class="ManagerClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Client"
        Width="480"
        Height="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFEEF2F6">

    <Grid>
        <Grid x:Name="DashboardPanel"
              Visibility="Collapsed">
            <!-- Dashboard content goes here -->
        </Grid>
        
        
        <!-- Login Card -->
        <Border 
                x:Name="LoginCard"
                Width="340"
                Padding="24"
                Background="#CCFFFFFF"
                CornerRadius="18"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect BlurRadius="22"
                                  ShadowDepth="0"
                                  Opacity="0.25"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Manager Login"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,18"
                           HorizontalAlignment="Center"/>

                <!-- Server IP -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Server IP"
                               FontSize="12"
                               Foreground="#666"
                               Margin="4,0,0,3"/>
                    <Border Background="#F8F9FB"
                            CornerRadius="12">
                        <TextBox Height="32"
                                 Padding="10,5"
                                 Text="{Binding ServerIp}"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- UDP Port -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="UDP Port"
                               FontSize="12"
                               Foreground="#666"
                               Margin="4,0,0,3"/>
                    <Border Background="#F8F9FB"
                            CornerRadius="12">
                        <TextBox Height="32"
                                 Padding="10,5"
                                 Text="{Binding UdpPort}"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Username -->
                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Username"
                               FontSize="12"
                               Foreground="#666"
                               Margin="4,0,0,3"/>
                    <Border Background="#F8F9FB"
                            CornerRadius="12">
                        <TextBox Height="32"
                                 Padding="10,5"
                                 Text="{Binding Username}"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Button -->
                <Border Background="#4F8CFF"
                        CornerRadius="14"
                        Width="150"
                        Height="38"
                        HorizontalAlignment="Center">
                    <Button Content="Connect"
        Click="Connect_Click"
        Background="Transparent"
        BorderBrush="Transparent"
        Foreground="White"
        BorderThickness="0"
        FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                           
                                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Window>

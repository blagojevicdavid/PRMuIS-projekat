<Window x:Class="EmployeeClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Client"
        Width="980"
        Height="560"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFEEF2F6">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BgBrush" Color="#FFEEF2F6"/>
        <SolidColorBrush x:Key="CardBrush" Color="#CCFFFFFF"/>
        <SolidColorBrush x:Key="InputBrush" Color="#FFF8F9FB"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF4F8CFF"/>
        <SolidColorBrush x:Key="MutedTextBrush" Color="#FF666666"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFE64B4B"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF2FB36D"/>

        <!-- Glass card -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.22"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input -->
        <Style x:Key="GlassTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="InputContainer" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource InputBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Flat button -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small pill button -->
        <Style x:Key="PillButtonBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="14,0"/>
        </Style>
    </Window.Resources>

    <!-- ROOT GRID -->
    <Grid Background="{StaticResource BgBrush}">

        <!-- DASHBOARD -->
        <Grid x:Name="DashboardPanel" Visibility="Collapsed" Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Style="{StaticResource GlassCard}" Grid.Row="0" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Zaposleni – Moji zadaci" FontSize="20" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Korisnik: " Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding Username}" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Text="   •   " Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding ConnectionStatus}" Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Style="{StaticResource PillButtonBorder}" Background="{StaticResource AccentBrush}">
                            <Button Style="{StaticResource FlatButton}"
                                    Content="Odjava"
                                    Foreground="White"
                                    Click="Logout_Click"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main content -->
            <Grid Grid.Row="1" Margin="0,14,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="560"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Assigned tasks -->
                <Border Grid.Column="0" Style="{StaticResource GlassCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Dodeljeni zadaci" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Sortirano po prioritetu (najmanji broj = najveći prioritet)"
                                           FontSize="12"
                                           Foreground="{StaticResource MutedTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Dugme 'UDP zahtev' IZBAČENO -->
                        </Grid>

                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding AssignedTasks}"
                                  SelectedItem="{Binding SelectedTask}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  GridLinesVisibility="None"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowHeight="36"
                                  ColumnHeaderHeight="34">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Naziv" Binding="{Binding Naziv}" Width="2*"/>
                                <DataGridTextColumn Header="Menadžer" Binding="{Binding Menadzer}" Width="*"/>
                                <DataGridTextColumn Header="Rok" Binding="{Binding Rok}" Width="*"/>
                                <DataGridTextColumn Header="Prioritet" Binding="{Binding Prioritet}" Width="Auto"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Right: Actions (unchanged) -->
                <Border Grid.Column="2" Style="{StaticResource GlassCard}">
                    <StackPanel>
                        <TextBlock Text="Rad nad izabranim zadatkom" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                        <Border Background="#0A000000" CornerRadius="14" Padding="12" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedTask.Naziv, FallbackValue=Izaberi zadatak sa liste}"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="Status: " Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedTask.Status}" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="   •   " Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                                    <TextBlock Text="Prioritet: " Foreground="{StaticResource MutedTextBrush}" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedTask.Prioritet}" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource AccentBrush}" CornerRadius="14" Height="40" Margin="0,0,0,10">
                            <Button Style="{StaticResource FlatButton}"
                                    Content="Preuzmi / Startuj (U toku)"
                                    Foreground="White"
                                    Click="StartTask_Click"/>
                        </Border>

                        <Border Background="{StaticResource SuccessBrush}" CornerRadius="14" Height="40" Margin="0,12,0,0">
                            <Button Style="{StaticResource FlatButton}"
                                    Content="Završi zadatak"
                                    Foreground="White"
                                    Click="FinishTask_Click"/>
                        </Border>

                        <Border Background="#0A000000" CornerRadius="14" Padding="10" Margin="0,14,0,0">
                            <TextBlock Text="{Binding FormHint}"
                                       Foreground="{StaticResource MutedTextBrush}"
                                       FontSize="12"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- LOGIN CARD -->
        <Border x:Name="LoginCard"
                Width="340"
                Padding="24"
                Background="#CCFFFFFF"
                CornerRadius="18"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="22" ShadowDepth="0" Opacity="0.25"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Employee Login"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,18"
                           HorizontalAlignment="Center"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Server IP" FontSize="12" Foreground="#666" Margin="4,0,0,3"/>
                    <Border Background="#F8F9FB" CornerRadius="12">
                        <TextBox Height="32" Padding="10,5"
                                 Text="{Binding ServerIp}"
                                 Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="UDP Port" FontSize="12" Foreground="#666" Margin="4,0,0,3"/>
                    <Border Background="#F8F9FB" CornerRadius="12">
                        <TextBox Height="32" Padding="10,5"
                                 Text="{Binding UdpPort}"
                                 Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,0,0,18">
                    <TextBlock Text="Username" FontSize="12" Foreground="#666" Margin="4,0,0,3"/>
                    <Border Background="#F8F9FB" CornerRadius="12">
                        <TextBox Height="32" Padding="10,5"
                                 Text="{Binding Username}"
                                 Background="Transparent" BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <Border Background="#4F8CFF"
                        CornerRadius="14"
                        Width="150"
                        Height="38"
                        HorizontalAlignment="Center">
                    <Button Content="Connect"
                            Click="Connect_Click"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Style="{StaticResource FlatButton}"/>
                </Border>

                <TextBlock Text="{Binding LoginHint}"
                           Foreground="{StaticResource MutedTextBrush}"
                           FontSize="12"
                           Margin="4,12,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
